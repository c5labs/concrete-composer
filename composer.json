{
    "name": "c5labs/concrete5-composer",
    "type": "project",
    "minimum-stability": "dev",
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Green",
            "email": "oliver@c5labs.com"
        }
    ],
    "require": {
        "concrete5/concrete5": "dev-develop"
    },
    "config": {
        "preferred-install": "dist"
    },
    "scripts": {
        "post-update-cmd": [
            "php -r \"file_put_contents('vendor/concrete5/concrete5/.htaccess', 'Order Deny,Allow'.PHP_EOL.'Allow from All');\""
        ],
        "post-install-cmd": [
            "php -r \"file_put_contents('vendor/.htaccess', 'Order Deny,Allow'.PHP_EOL.'Deny from All');\"",
            "php -r \"file_put_contents('vendor/concrete5/concrete5/.htaccess', 'Order Deny,Allow'.PHP_EOL.'Allow from All');\""
        ]
    }
}
